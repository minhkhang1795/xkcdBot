#!/usr/bin/env node

var botID = process.env.BOT_ID;
var currentComicJsonUrl = 'https://xkcd.com/info.0.json';
var fs = require('fs');
var fileName = './values.json';
var file = require(fileName);

function postXkcd() {
  var today = new Date();
  if (today.getDay() != 0 && today.getDay() != 3 && today.getDate() != 5 || file.stop) {
    process.exit();
    return;
  }

  var request = require("request");
  var result = 'Can\'t find today\'s comic!!!';
  var alt;

  request({
    url: currentComicJsonUrl,
    json: true
  }, function (error, response, body) {

    if (!error && response.statusCode === 200) {
      result = body.img;
      alt = "#" + body.num + " " + body.title + ": " + body.alt;
    }
    post(result, alt);
  })
}

function post(botResponse, alt) {
  var options, body;

  options = {
    hostname: 'api.groupme.com',
    path: '/v3/bots/post',
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    }
  };

  body = {
    "bot_id": botID,
    "text": botResponse
  };

  var HTTPS = require('https');
  console.log('sending ' + botResponse + ' to ' + botID);
  var botReq = HTTPS.request(options, function (res) {
    if (res.statusCode == 202) {
      //neat
      if (alt != null)
        post(alt);
      else
        process.exit();
    } else {
      console.log('rejecting bad status code ' + res.statusCode);
      process.exit();
    }
  });

  botReq.on('error', function (err) {
    console.log('error posting message ' + JSON.stringify(err));
  });
  botReq.on('timeout', function (err) {
    console.log('timeout posting message ' + JSON.stringify(err));
  });
  botReq.end(JSON.stringify(body));
}

postXkcd();